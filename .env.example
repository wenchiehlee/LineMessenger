# LINE Bot 設定
LINE_CHANNEL_ACCESS_TOKEN=your_line_channel_access_token
LINE_CHANNEL_SECRET=your_line_channel_secret

# Google Sheets 設定
GOOGLE_SERVICE_ACCOUNT_EMAIL=your-service-account@project.iam.gserviceaccount.com
GOOGLE_PRIVATE_KEY="-----BEGIN PRIVATE KEY-----\n...\n-----END PRIVATE KEY-----\n"
GOOGLE_SPREADSHEET_ID=your_spreadsheet_id

# 伺服器設定
PORT=3000

# 排程設定
# 使用外部 cron 服務時設為 false (推薦用於免費平台)
ENABLE_INTERNAL_CRON=false

# 內建排程 Cron 格式 (僅當 ENABLE_INTERNAL_CRON=true 時使用)
PRICE_CHECK_CRON=0 */6 * * *

# 外部 Cron 驗證 Token (可選，用於保護 /api/check-prices 端點)
CRON_SECRET=your_random_secret_token
